<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10AFF8"
    android:padding="20dp"
    tools:context=".Account">

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="104dp"
        android:layout_marginBottom="47dp"
        android:onClick="Logout"
        android:text="Logout" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp"
        android:text="Account Information"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="56dp"
        android:text="Your Name"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/profileEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileName"
        android:layout_marginTop="3dp"
        android:text="Your Email"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/profilePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileName"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logoutBtn"
        android:layout_marginTop="104dp"
        android:layout_marginBottom="-50dp"
        android:onClick="quiz"
        android:text="Attempt Music Quiz" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_marginBottom="-70dp"
        android:text="You will have 30 seconds to answer 4 questions. All you need to do is match the lyric to the song. Feeling brave? Click the Button Below!"
        android:textSize="20sp" />
</RelativeLayout>